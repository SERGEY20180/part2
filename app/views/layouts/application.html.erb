<!DOCTYPE html>
<html>
<head>
  <title>ThirdApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <%= link_to "Домой", home_index_path %>
    |
    <%= link_to "Страницы", pages_index_path %>
    |
    <%= link_to "Пользователи", home_user_path %>
    |
    <% if user_signed_in? %>
    <%= link_to "Выход", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Вход", new_user_session_path %>
      |
      <%= link_to "Регистрация", new_user_registration_path %>
    <% end %>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>

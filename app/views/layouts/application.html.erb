  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">  
    <div class="row">
      <nav role="navigation" class="navbar navbar-inverse">
        <div class="container"> 
            <div class="navbar-header header">
